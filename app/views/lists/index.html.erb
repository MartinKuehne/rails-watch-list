<div class="card-category m-3" style="width: 100%; height: 24rem; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_url("movies.jpg")%>); ">
  Save any kind of movie
</div>

<h1>My Lists</h1>

<div class="container d-flex justify-content-center">
  <% @lists.each do |list| %>
    <div class="card-category m-3" style="width: 24rem; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/400x300/?movie,cinema)">
      <%= link_to list.name, list_path(list) %>
    </div>
<% end %>
</div>
